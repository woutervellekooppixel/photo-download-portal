# Environment variables
# Copy this file to .env and fill in your values

# Admin password for the dashboard
ADMIN_PASSWORD=1234

# Admin email for download notifications
ADMIN_EMAIL=info@woutervellekoop.nl

# Cloudflare R2 Configuration
# Get these from: https://dash.cloudflare.com -> R2 -> Manage R2 API Tokens
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_BUCKET_NAME=photo-downloads
R2_PUBLIC_URL=https://pub-your-bucket-id.r2.dev

# Public R2 URL for client-side access (must be publicly accessible)
# This should be the same as R2_PUBLIC_URL but prefixed with NEXT_PUBLIC_ for client-side access
NEXT_PUBLIC_R2_PUBLIC_URL=https://pub-your-bucket-id.r2.dev

# Resend API Key for email notifications
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_your_key_here

# Cron job secret for automatic cleanup
# Generate a random string for security
CRON_SECRET=your_random_secret_here
